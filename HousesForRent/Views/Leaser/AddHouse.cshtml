
@{
    ViewBag.Title = "AddHouse";
}
<div id="landlord">

    <datalist id="country">
        <option v-for="countryLocation in countryLocations">
        {{countryLocation.City}} {{countryLocation.State}}  ({{countryLocation.Country}})
        </option>
    </datalist>

    <div class="well col-md-5 col-md-offset-3">
        <center>
            <h3 style="background-color:aqua">Add New Listing</h3>
            <label>Phone Number or Email</label>
            <input class="form-control" v-model="listingsInfo.ContactInfo" placeholder="Contactinfo" />

            <label>Amount of Bedrooms</label>
            <input class="form-control" v-model="listingsInfo.Bedrooms" placeholder="Bedrooms" />

            <label>Amount of Bathrooms (.5 for half)</label>
            <input class="form-control" v-model="listingsInfo.Bathrooms" placeholder="Bathrooms" />

            <label>Price</label>
            <input class="form-control" v-model="listingsInfo.Price" placeholder="Price" />

            <label>Country</label>
            <input class="form-control" list="country" placeholder="Country" />

            <label>Comments</label>
            <input class="form-control" v-model="listingsInfo.Comments" placeholder="Comments" />

            <label>Expiration Date ($0.50 per day. minimum 1 week)</label>
            <input class="form-control" v-model="listingsInfo.Date" type="date" />

            <label>Furnished</label>
            <input type="checkbox" v-model="listingsInfo.Furnished" /><br />

            <button v-on:click="addRental()" class="btn btn-primary">Register listing</button>
        </center>
    </div>

</div>

    


@section scripts{
    <script src="~/Scripts/vue.js"></script>
    <script src="~/Scripts/vue-folder/addHouse-vue.js"></script>
}